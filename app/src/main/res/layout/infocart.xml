<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    android:id="@+id/cardcart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    >
    <RelativeLayout
        android:id="@+id/relafoodinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/buttonstyle2">

    <TextView
        android:id="@+id/foodnamecart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Beef cheese delight "
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:padding="15dp"
        android:paddingBottom="5dp"/>
    <TextView
        android:id="@+id/foodpricecart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="200BDT"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:padding="15dp"
        android:paddingBottom="5dp"/>

        <TextView
        android:id="@+id/foodtotalpricecart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="200BDT"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:padding="15dp"
        android:layout_below="@+id/foodpricecart"
        android:paddingBottom="5dp"/>

        <ImageView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200BDT"
            android:textSize="10sp"
            android:textStyle="bold"
            android:src="@drawable/ic_baseline_delete_forever_24"

            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="15dp"
            android:layout_below="@+id/foodtotalpricecart"
            android:paddingBottom="5dp"/>



        <TextView
            android:id="@+id/foodamountcart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="3 "
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:padding="15dp"
            android:layout_below="@id/foodpricecart"
            android:paddingBottom="5dp"/>



    </RelativeLayout>



</androidx.cardview.widget.CardView>