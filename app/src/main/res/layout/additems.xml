<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/buttonstyle4"

    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <EditText
        android:id="@+id/itemname"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:layout_marginRight="10dp"
        android:background="@drawable/buttonstyle3"
        android:hint="Enter Item name"
        android:padding="10dp"

        android:textColor="#0E0E0E"
        android:textColorHint="#756F6F"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/itemname"
        android:layout_marginTop="10dp"
        android:text="Size"
        android:background="@drawable/buttonstyle3"
        android:textColor="#0E0E0E"
        android:textColorHint="#756F6F"
        android:textSize="15sp"
        android:textStyle="bold"


        android:layout_marginRight="20dp"
        />

    <EditText
        android:id="@+id/itemdeDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonstyle3"
        android:hint="Add Description"
        android:padding="10dp"
        android:layout_below="@id/itemname"

        android:textColor="#756F6F"
        android:textColorHint="#756F6F"
        android:textSize="10sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"

        android:layout_below="@+id/itemdeDescription"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/buttonstyle3"
        android:hint="Price"
        android:padding="10dp"
        android:inputType="number"
        android:textColor="#F60B0B"
        android:textColorHint="#756F6F"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <View

        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/itemPrice"


        android:background="#F4EFEF" />



</RelativeLayout>