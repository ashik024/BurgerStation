<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AdminPanel">

    <RelativeLayout
        android:id="@+id/relativeAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/logoAdmin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/logoAdmin"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"

            android:text="Add Your Restaurant"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/logoAdmin"


            android:layout_marginLeft="20dp"

            android:layout_marginTop="10dp"


            android:gravity="center"
            android:visibility="invisible"

            android:text="Add Menu Items"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <Button
            android:id="@+id/ADD"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:layout_toRightOf="@+id/text"

            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:visibility="invisible"

            android:layout_marginRight="100dp"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="60dp"

            android:layout_marginTop="80dp"
            android:background="@drawable/buttonstyle"
            android:layout_marginBottom="30dp"
            android:layout_toLeftOf="@+id/text"
            android:layout_marginRight="10dp"
            android:textColor="#F4F4F1"
            android:textSize="20sp"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/text"
            android:text="Save" />



        <View

            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/text"

            android:background="@drawable/ic_wave_2" />


        <View

            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view1"


            android:background="@color/colorPrimary" />




            <EditText
                android:id="@+id/itemname"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/view1"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonstyle3"
                android:hint="Enter Item name"
                android:padding="10dp"
                android:textColor="#0E0E0E"
                android:textColorHint="#756F6F"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible"
                />



            <EditText
                android:id="@+id/itemdeDescription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonstyle3"
                android:hint="Add Description"
                android:padding="10dp"
                android:layout_below="@id/itemname"
                android:visibility="invisible"
                android:textColor="#756F6F"
                android:textColorHint="#756F6F"
                android:textSize="10sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:layout_below="@+id/itemdeDescription"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/buttonstyle3"
                android:hint="Price"
                android:padding="10dp"
                android:inputType="number"
                android:textColor="#F60B0B"
                android:textColorHint="#756F6F"
                android:textSize="15sp"
                android:textStyle="bold"/>









        <EditText
            android:id="@+id/restaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginLeft="20dp"




            android:layout_marginRight="20dp"
            android:background="@drawable/buttonstyle3"
            android:hint="Enter Restaurant Name "
            android:padding="10dp"

            android:textColor="#000000"
            android:textColorHint="#5A5353"
            android:textSize="10sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonstyle3"
            android:hint="Enter City "
            android:padding="10dp"

            android:textColor="#000000"
            android:textColorHint="#5A5353"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonstyle3"
            android:hint="Enter Address  "
            android:padding="10dp"

            android:textColor="#000000"
            android:textColorHint="#5A5353"
            android:textSize="10sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/adress"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonstyle3"
            android:hint="Delivery Time "
            android:padding="10dp"

            android:textColor="#0E0E0E"
            android:textColorHint="#5A5353"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_menu_gallery"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/postalcode"/>

        <EditText
            android:id="@+id/texttt"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/postalcode"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttonstyle3"
            android:hint="Free Delivery "
            android:padding="10dp"

            android:layout_alignParentRight="true"

            android:textColor="#0E0E0E"
            android:textColorHint="#5A5353"
            android:textSize="10sp"
            android:textStyle="bold"

            />


        <Button
            android:id="@+id/nextAdmin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texttt"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"


            android:background="@drawable/buttonstyle3"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>