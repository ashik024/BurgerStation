<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:background="#FDFCFA"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/skip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        app:lottie_rawRes="@raw/freshfood"

        />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fresh"
        android:textSize="30sp"
       android:fontFamily="sans-serif"
       android:layout_below="@id/lottie2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
       />
    <TextView
        android:id="@+id/title11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#0B0B0B"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/title1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/title111"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title11"
        android:layout_marginLeft="50dp"

        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="We Make Sure We Provide Fresh Food Cause We Care About Our Customer Health."
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:src="@drawable/tab1"
        android:layout_below="@id/title111"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>